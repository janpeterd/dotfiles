set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set font Iosevka Aile,9
set guioptions 'sv'

# smooth scrolling
map j feedkeys "<C-Down>"
map k feedkeys "<C-Up>"
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top

map <C-b> focus_inputbar ":bmark 1" 
map <C-B> focus_inputbar ":blist 1" 
